{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "Debug Unit Test - Current Open File",
          "program": "${workspaceFolder}/node_modules/.bin/jest",
          "args": [
              // This is needed to run only the test file that is currently open
              "${fileBasenameNoExtension}",
              "--runInBand",
              "--no-cache",
              // For unit tests we used the default config file, for speed
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "env": {
              "NODE_ENV": "test"
          },
          "skipFiles": [
            "<node_internals>/**"
          ],
        },
        {
          "type": "node",
          "request": "launch",
          "name": "Debug E2E Test - Current Open File",
          "program": "${workspaceFolder}/node_modules/.bin/jest",
          "args": [
              // This is needed to run only the test file that is currently open
              "${fileBasenameNoExtension}",
              "--runInBand",
              "--no-cache",
              "--config",
              // We need to specity the jest config file to use for E2E tests.
              "./test/jest-e2e.ts"
          ],
          "console": "integratedTerminal",
          "internalConsoleOptions": "neverOpen",
          "env": {
              "NODE_ENV": "test"
          },
          "skipFiles": [
            "<node_internals>/**"
          ],
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/main.ts",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}
