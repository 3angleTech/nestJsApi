{
  "name": "nestjs-api",
  "version": "0.0.1",
  "description": "Open Source NodeJS Project w/ TypeScript & NestJS",
  "author": "3angleTech",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:3angleTech/nestJsApi.git"
  },
  "bugs": {
    "url": "https://github.com/3angleTech/nestJsApi/issues"
  },
  "homepage": "https://github.com/3angleTech/nestJsApi#readme",
  "main": "src/main.ts",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main.js",
    "lint": "eslint -c .eslintrc.js \"{src,db,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli",
    "migration:create": "npm run typeorm migration:create",
    "migration:run": "npm run typeorm -- -d typeormconfig.ts migration:run -t=false",
    "migration:revert": "npm run typeorm -- -d typeormconfig.ts migration:revert",
    "run-migrations-and-start": "npm run migration:run && npm run start:prod"
  },
  "dependencies": {
    "@nestjs/common": "10.1.3",
    "@nestjs/config": "3.0.0",
    "@nestjs/core": "10.1.3",
    "@nestjs/jwt": "10.1.0",
    "@nestjs/passport": "10.0.0",
    "@nestjs/platform-express": "10.1.3",
    "@nestjs/typeorm": "10.0.0",
    "@sendgrid/mail": "7.7.0",
    "bcrypt": "5.1.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "cookie-parser": "1.4.6",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "pg": "8.11.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.8.1",
    "typeorm": "0.3.17"
  },
  "devDependencies": {
    "@3angletech/eslint-config": "15.0.1",
    "@nestjs/cli": "10.1.11",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.1.3",
    "@types/bcrypt": "5.0.0",
    "@types/cookie-parser": "1.4.3",
    "@types/express": "4.17.17",
    "@types/jest": "29.5.3",
    "@types/node": "18.17.3",
    "@types/passport-jwt": "3.0.9",
    "@types/supertest": "2.0.12",
    "eslint": "8.46.0",
    "jest": "29.6.2",
    "source-map-support": "0.5.21",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "ts-loader": "9.4.4",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
